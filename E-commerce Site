    const products = [
      "Mobile Phone","Laptop","Headphones","Smart Watch","Shoes",
      "Backpack","Camera","Keyboard","Mouse","Power Bank"
    ];

    products.forEach((p, i) => {
      document.write(`
        <div class="product">
          <h3>${p}</h3>
          <p>Price: Rs ${(i+1)*1000}</p>
          <button onclick="addToCart('${p}')">Add to Cart</button>
        </div>
      `);
    });
  </script>
</div>

