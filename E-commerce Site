body {
  font-family: Arial, sans-serif;
  padding: 20px;
}

.products {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 15px;
}

.product {
  border: 1px solid #ccc;
  padding: 10px;
  text-align: center;
}

button {
  padding: 5px 10px;
  cursor: pointer;
}

input, textarea {
  width: 300px;
  margin: 5px 0;
}
let cart = [];

function addToCart(product) {
  cart.push(product);
  renderCart();
}

function renderCart() {
  const cartList = document.getElementById("cart");
  cartList.innerHTML = "";
  cart.forEach(item => {
    const li = document.createElement("li");
    li.textContent = item;
    cartList.appendChild(li);
  });
}

function placeOrder(e) {
  e.preventDefault();
  alert("âœ… Order Placed Successfully!");
  cart = [];
  renderCart();
}
